{
  "compilerOptions": {
    "rootDir": "./src",                 // Specify the root directory of input files. Use to control the output directory structure with --outDir.
    "baseUrl": "./src",                 // Base directory to resolve non-relative module names
    "outDir": "./dist",                    // Redirect output structure to the directory
    "target": "ES5",                    // Specify the ECMAScript target version
    "moduleDetection": "auto",             // Specify how TypeScript looks up a file from a given module specifier.
    "strict": true,                        // Enable all strict type-checking options
    "esModuleInterop": true,                // Enable/disable emit helpers like '__importDefault'
    "skipLibCheck": true,                  // Skip type checking of declaration files
    // "module": "NodeNext",                  // Specify the module system (e.g., "commonjs" or "esnext")
    // "moduleResolution": "NodeNext",            // Specify module resolution strategy (e.g., "node" or "classic")
    // "noEmit": true,                        // Do not emit JavaScript output
    // "forceConsistentCasingInFileNames": true, // Ensure that casing is consistent in file names
    // "resolveJsonModule": true,             // Include support for importing JSON modules
    // "isolatedModules": true,               // Ensure that each file is treated as a separate module
    // "strictPropertyInitialization": false, // Enable strict checking of property initialization
    // "noUnusedLocals": true,                // Report errors on unused locals
    // "noUnusedParameters": true,            // Report errors on unused parameters
    // "noImplicitReturns": true,             // Report error when not all code paths in function return a value
    // "noFallthroughCasesInSwitch": true,    // Report errors for fallthrough cases in switch statement
    // "allowJs": true,                       // Allow JavaScript files to be a part of your program. Use the `checkJS` option to get errors from these files
  },
  "include": [
    "src/**/**/*.ts",                        // Include TypeScript files in the "src" directory
    "src/**/**/**/*.ts",                        // Include TypeScript files in the "src" directory
    // "src/**/*.d.ts",                      // Include TypeScript declaration files in the "src" directory
    // "test/**/*.ts"                        // Include test files
  ],
  "exclude": [
    "node_modules"                        // Exclude the "node_modules" directory
  ]
}

